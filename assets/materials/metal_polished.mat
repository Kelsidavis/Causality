# Polished Metal Material
# Highly reflective metallic surface (for testing PBR)

name: "Polished Metal"

# Texture paths (no textures - pure material properties)
albedo_texture: null
normal_texture: null
metallic_roughness_texture: null
ao_texture: null

# PBR parameters
base_color: [0.95, 0.95, 0.95, 1.0]  # Silver/chrome color
metallic: 1.0                         # Fully metallic
roughness: 0.05                       # Very smooth (polished)
ao_factor: 1.0

# Emission
emissive_color: [0.0, 0.0, 0.0]
emissive_strength: 0.0

# Rendering flags
alpha_mode: Opaque
double_sided: false
